<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinSsh.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinSsh.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <!-- Title -->
            <TextBlock 
                Text="Settings"
                Style="{StaticResource TitleTextBlockStyle}"/>

            <!-- General Section -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="General"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <StackPanel Spacing="8" Padding="12,0,0,0">
                    <CheckBox 
                        x:Name="StartWithWindowsCheckBox"
                        Content="Start with Windows"
                        IsChecked="False"/>
                    
                    <CheckBox 
                        x:Name="MinimizeToTrayCheckBox"
                        Content="Minimize to system tray"
                        IsChecked="False"/>
                    
                    <CheckBox 
                        x:Name="ConfirmOnExitCheckBox"
                        Content="Confirm before closing window"
                        IsChecked="True"/>
                </StackPanel>
            </StackPanel>

            <!-- Appearance Section -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="Appearance"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <StackPanel Spacing="8" Padding="12,0,0,0">
                    <TextBlock Text="Theme" Opacity="0.8"/>
                    <ComboBox 
                        x:Name="ThemeComboBox"
                        Width="200"
                        HorizontalAlignment="Left"
                        SelectedIndex="0">
                        <ComboBoxItem Content="System default"/>
                        <ComboBoxItem Content="Light"/>
                        <ComboBoxItem Content="Dark"/>
                    </ComboBox>
                    
                    <TextBlock Text="Backdrop style" Opacity="0.8" Margin="0,12,0,0"/>
                    <ComboBox 
                        x:Name="BackdropComboBox"
                        Width="200"
                        HorizontalAlignment="Left"
                        SelectedIndex="0">
                        <ComboBoxItem Content="Mica"/>
                        <ComboBoxItem Content="Acrylic"/>
                        <ComboBoxItem Content="None"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            <!-- Terminal Section -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="Terminal"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <StackPanel Spacing="8" Padding="12,0,0,0">
                    <TextBlock Text="Default SSH executable path" Opacity="0.8"/>
                    <TextBox 
                        x:Name="SshPathTextBox"
                        PlaceholderText="C:\Windows\System32\OpenSSH\ssh.exe"
                        Text="C:\Windows\System32\OpenSSH\ssh.exe"
                        Width="400"
                        HorizontalAlignment="Left"/>
                    
                    <TextBlock Text="Default columns" Opacity="0.8" Margin="0,12,0,0"/>
                    <NumberBox 
                        x:Name="DefaultColsNumberBox"
                        Value="80"
                        Minimum="20"
                        Maximum="500"
                        SpinButtonPlacementMode="Inline"
                        Width="200"
                        HorizontalAlignment="Left"/>
                    
                    <TextBlock Text="Default rows" Opacity="0.8" Margin="0,12,0,0"/>
                    <NumberBox 
                        x:Name="DefaultRowsNumberBox"
                        Value="24"
                        Minimum="10"
                        Maximum="200"
                        SpinButtonPlacementMode="Inline"
                        Width="200"
                        HorizontalAlignment="Left"/>
                    
                    <CheckBox 
                        x:Name="CloseTabOnDisconnectCheckBox"
                        Content="Close tab on disconnect"
                        IsChecked="False"
                        Margin="0,12,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- About Section -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="About"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <StackPanel Spacing="8" Padding="12,0,0,0">
                    <TextBlock Text="WinSsh" FontWeight="SemiBold"/>
                    <TextBlock Text="Version 1.0.0" Opacity="0.7"/>
                    <TextBlock Text="A modern SSH client for Windows" Opacity="0.7"/>
                    
                    <HyperlinkButton 
                        Content="View on GitHub"
                        NavigateUri="https://github.com"
                        Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                <Button 
                    x:Name="SaveButton"
                    Content="Save Settings"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="SaveButton_Click"/>
                <Button 
                    x:Name="ResetButton"
                    Content="Reset to Defaults"
                    Click="ResetButton_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
